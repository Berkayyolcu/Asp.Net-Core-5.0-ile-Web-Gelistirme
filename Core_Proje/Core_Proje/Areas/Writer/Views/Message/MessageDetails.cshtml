@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriteLayout.cshtml";
}

<h1>Mesaj Detayları</h1>

<br />
<form class="form-group">
    @Html.HiddenFor(x => x.WriterMessageID, new { @class = "form-control", @readonly = "readonly" })

    @Html.Label("Gönderici Adı")
    @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control", @readonly = "readonly" })
    <br />

    @Html.Label("Gönderen Mail")
    @Html.TextBoxFor(x => x.Sender, new { @class = "form-control", @readonly = "readonly" })
    <br />

    @Html.Label("Mesaj")
    @Html.TextAreaFor(x => x.MessageContent, new { @class = "form-control", @readonly = "readonly" })
</form>

@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageAdd";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0"> Yeni Mesaj Gönder</h3>
</div>

<form class="form-group" method="post">

    <br /> <br />
    <label> Konu </label>
    @Html.TextBoxFor(x =>x.Subject, new{@class ="form-control"})
    <br />
    <label>Alıcı</label>
    @Html.TextBoxFor(x =>x.Receiver, new{@class ="form-control"})
    <br />
    <label>Mesaj</label>
    @Html.TextAreaFor(x =>x.MessageContent,8,3, new{@class ="form-control"})
    <br />
    <button class="btn btn-primary">Ekle</button>

</form>
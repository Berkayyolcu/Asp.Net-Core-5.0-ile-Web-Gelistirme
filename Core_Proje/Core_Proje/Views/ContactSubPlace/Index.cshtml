@model EntityLayer.Concrete.Contact

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("Index", "ContactSubPlace", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Alt İletişim Bilgileri Düzenleme</h3>
                <form class="form-group" method="post">

                    <div class="form-group">
                        <label for="exampleInputName1">Hakkımda Id</label>
                        @Html.HiddenFor(x=> x.ContactID,new{@class="form-control" })
                    </div>

                    <div class="form-group">
                        <label for="exampleInputName1">Başlık</label>
                        @Html.TextBoxFor(x => x.Title,new{@class="form-control"})
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea1">Telefon</label>
                        @Html.TextBoxFor(x => x.Phone, new{@class="form-control"})
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail</label>
                        @Html.TextBoxFor(x => x.Mail,new{@class="form-control"})
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail3">Resim Yükle</label>
                        @Html.TextAreaFor(x => x.Description,6,3,new{@class="form-control"})
                    </div>


                    <button class="btn btn-primary mr-2">Güncelle</button>

                </form>
            </div>
        </div>
    </div>

}


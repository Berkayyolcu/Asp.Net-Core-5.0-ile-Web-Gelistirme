@model EntityLayer.Concrete.Experience

@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <h3 class="card-title">Deneyim Ekleme Sayfası</h3>

            <form class="form-group" method="post">

                <div class="form-group">
                    <label for="exampleInputName1">İş Yeri Ünvanı</label>
                    <input type="text" class="form-control" name="Name" id="exampleInputName1" placeholder="Ünvan">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Deneyim Tarihi</label>
                    <input type="text" class="form-control" name="Date" id="exampleInputName1" placeholder="Tarih">
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Resim Yükle</label>
                    <input type="text" class="form-control" name="ImageUrl" id="exampleInputEmail3" placeholder="Resim Yolu">
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Acıklama</label>
                    <textarea class="form-control" name="Description" id="exampleTextarea1" rows="4"></textarea>
                </div>

                <button class="btn btn-primary mr-2">Ekle</button>

            </form>

        </div>
    </div>
</div>

@model EntityLayer.Concrete.Feature

@{
    ViewData["Title"] = "AddFeature";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <h3 class="card-title">Öne Çıkan Yazı Ekleme Sayfası</h3>

            <form class="form-group" method="post">

                <div class="form-group">
                    <label for="exampleInputName1">Giriş Yazısı</label>
                    <input type="text" class="form-control" name="Header" id="exampleInputName1" placeholder="Giris Cümlesi">
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Adı ve Soyadı</label>
                    <input type="text" class="form-control" name="Name" id="exampleInputEmail3" placeholder="Kisi Adı ve Soyadı">
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Baslık</label>
                    <input type="text" class="form-control" name="Title" id="exampleInputEmail3" placeholder="Baslıgınız">
                </div>

                <button class="btn btn-primary mr-2">Ekle</button>

            </form>

        </div>
    </div>
</div>

@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditService", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <h3 class="card-title">Hizmet Güncelleme Sayfası</h3>

                <form class="form-group" method="post">

                    <div class="form-group">
                        @Html.HiddenFor(x=> x.ServiceID,new{@class="form-control" })
                    </div>

                    <div class="form-group">
                        <label for="exampleInputName1">Başlık</label>
                        @Html.TextBoxFor(x => x.Title,new{@class="form-control"})
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail3">Resim Yükle</label>
                        @Html.TextBoxFor(x => x.ImageUrl,new{@class="form-control"})
                    </div>

                    <button class="btn btn-outline-success mr-2">Güncelle</button>

                </form>

            </div>
        </div>
    </div>
}
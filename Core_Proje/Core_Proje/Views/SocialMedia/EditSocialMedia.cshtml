@model EntityLayer.Concrete.SocialMedia

@{
    ViewData["Title"] = "EditSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("EditSocialMedia", "SocialMedia", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <h3 class="card-title">Sosyal Medya Düzenleme Sayfası</h3>

                <form class="form-group" method="post">

                    <div class="form-group">
                        @Html.HiddenFor(x=> x.SocialMediaID,new{@class="form-control" })
                    </div>

                    <div class="form-group">
                        <label for="exampleInputName1">Sosyal Medya</label>
                        @Html.TextBoxFor(x=> x.Name,new{@class="form-control" })
                    </div>

                    <div class="form-group">
                        <label for="exampleInputName1">Sosyal Medya Link</label>
                        @Html.TextBoxFor(x => x.Url,new{@class="form-control"})

                    </div>

                    <div class="form-group">
                        <label for="exampleInputName1">Sosyal Medya İkon</label>
                        @Html.TextBoxFor(x => x.Icon,new{@class="form-control"})
                    </div>


                    <button class="btn btn-outline-success mr-2">Güncelle</button>

                </form>

            </div>
        </div>
    </div>
}
